    "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "lib": ["ES6"],
      "declaration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "allowJs": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "baseUrl": "."
    },
    "include": [
      "src/**/*"
    ]
